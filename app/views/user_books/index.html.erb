<p style="color: green"><%= notice %></p>

<% content_for :title, "User books" %>

<h1>User books</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Book Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |user_book| %>
      <tr>
        <td><%= User.where(id: user_book.user_id).first.username %></td>
        <td><%= Book.where(id: user_book.book_id).first.title %></td>
        <td><%= link_to "Show", user_book %></td>
        <td><%= link_to "Edit", edit_user_book_path(user_book) %></td>
        <td><%= link_to "Destroy", user_book, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "New user book", new_user_book_path %>
